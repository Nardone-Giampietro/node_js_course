{% layout 'main-layout' %}

{% block content %}
<div class="center">
    <h1>{{ product.title }}</h1>
    <hr>
    <div>
        <img src="{{ product.imageUrl }}" alt="">
    </div>
    <h2>
        {{ product.price }}
    </h2>
    <p>
        {{ product.description }}
    </p>
    <p>
        Made by: {{ product.userId.name }}
    </p>
    {% render 'add-to-cart', product: product %}
</div>
{% endblock %}