<nav class="main-header__nav">
    <ul class="main-header__item-list">
        <li class="main-header__item">
            <a class={% if path == '/' %} "active" {% else %} "" {% endif %} href="/">Shop</a>
        </li>
        <li class="main-header__item">
            <a class={% if path == '/products' %} "active" {% else %} "" {% endif %} href="/products">Products</a>
        </li>
        {% if isAuthenticated %}
            <li class="main-header__item">
                <a class={% if path == '/cart' %} "active" {% else %} "" {% endif %} href="/cart">Cart</a>
            </li>
            <li class="main-header__item">
                <a class={% if path == '/orders' %} "active" {% else %} "" {% endif %} href="/orders">Orders</a>
            </li>
            <li class="main-header__item">
                <a class={% if path == '/admin/add-product' %} "active" {% else %} "" {% endif %} href="/admin/add-product">Add Product</a>
            </li>
            <li class="main-header__item">
                <a class={% if path == '/admin/products' %} "active" {% else %} "" {% endif %} href="/admin/products">Admin Products</a>
            </li>
        {% endif %}
    </ul>
    {% if isAuthenticated %}
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <form action="/logout" method="POST">
                    <button type="submit">Log Out</button>
                </form>
            </li>
        </ul>
    {% else %}
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class={% if path == '/login' %} "active" {% else %} "" {% endif %} href="/login">Login</a>
            </li>
        </ul>
    {% endif %}
</nav>